{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "LEAP-DF-DataLoad"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/LeapDataMovementDaily')]",
			"type": "Microsoft.DataFactory/factories/triggers",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"runtimeState": "Started",
				"pipelines": [
					{
						"pipelineReference": {
							"referenceName": "LeapDataMovementDaily",
							"type": "PipelineReference"
						},
						"parameters": {
							"windowStart": "@trigger().outputs.windowStartTime",
							"windowEnd": "@trigger().outputs.windowEndTime",
							"DataProcessDate": "utcnow()",
							"Container": "cntleap",
							"Directory": "@concat('/', formatDateTime(@trigger().outputs.windowStartTime, 'yyyy'), '/', formatDateTime(@trigger().outputs.windowStartTime, 'MM'), '/', formatDateTime(@trigger().outputs.windowStartTime, 'dd'), '/')"
						}
					}
				],
				"type": "ScheduleTrigger",
				"typeProperties": {
					"recurrence": {
						"frequency": "Day",
						"interval": 1,
						"startTime": "2021-03-10T10:15:00",
						"timeZone": "India Standard Time",
						"schedule": {
							"minutes": [
								30
							],
							"hours": [
								10
							]
						}
					}
				}
			},
			"dependsOn": []
		}
	]
}