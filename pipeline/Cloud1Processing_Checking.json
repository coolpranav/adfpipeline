{
	"name": "Cloud1Processing_Checking",
	"properties": {
		"activities": [
			{
				"name": "Until Cloud 1 Processing Done",
				"type": "Until",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@or(not(equals(variables('flgFullProcessingPending'), '1')),\nnot(greaterOrEquals(variables('MaxNoofCheck'),variables('CurrentCountNoofCheck'))))\n",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "Set flgFullProcessingPending",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "SpGetCloudFileLoadingStatus_Cloud1",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"variableName": "flgFullProcessingPending",
								"value": {
									"value": "@string(activity('SpGetCloudFileLoadingStatus_Cloud1').output.firstRow.flgLoadingDone)",
									"type": "Expression"
								}
							}
						},
						{
							"name": "SpGetCloudFileLoadingStatus_Cloud1",
							"type": "Lookup",
							"dependsOn": [
								{
									"activity": "Count Completed",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "SqlDWSource",
									"sqlReaderStoredProcedureName": "[dbo].[SpGetCloudFileLoadingStatus_Check]",
									"storedProcedureParameters": {
										"CloudInstance": {
											"type": "Byte",
											"value": "1"
										}
									},
									"queryTimeout": "02:00:00",
									"partitionOption": "None"
								},
								"dataset": {
									"referenceName": "DataFoundationConnectionV2",
									"type": "DatasetReference"
								}
							}
						},
						{
							"name": "Set CurrentCountNoofCheck",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "SpGetCloudFileLoadingStatus_Cloud1",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"variableName": "CurrentCountNoofCheck",
								"value": {
									"value": "@string(add(int(variables('PreviousCountNoofCheck')),1))",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Count Completed",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "Set variable2",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"variableName": "PreviousCountNoofCheck",
								"value": {
									"value": "@variables('CurrentCountNoofCheck')",
									"type": "Expression"
								}
							}
						},
						{
							"name": "If Condition1",
							"type": "IfCondition",
							"dependsOn": [
								{
									"activity": "Set flgFullProcessingPending",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"expression": {
									"value": "@equals(variables('flgFullProcessingPending'),'1')",
									"type": "Expression"
								},
								"ifTrueActivities": [
									{
										"name": "Wait 10 min",
										"type": "Wait",
										"dependsOn": [],
										"userProperties": [],
										"typeProperties": {
											"waitTimeInSeconds": 1
										}
									}
								]
							}
						},
						{
							"name": "Set variable1",
							"type": "SetVariable",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"variableName": "checkvalue",
								"value": {
									"value": "@string(not(greaterOrEquals(variables('MaxNoofCheck'),variables('CurrentCountNoofCheck'))))",
									"type": "Expression"
								}
							}
						},
						{
							"name": "Set variable2",
							"type": "SetVariable",
							"dependsOn": [
								{
									"activity": "Set variable1",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"variableName": "checkvalue1",
								"value": {
									"value": "@variables('CurrentCountNoofCheck')",
									"type": "Expression"
								}
							}
						}
					],
					"timeout": "7.00:00:00"
				}
			}
		],
		"variables": {
			"flgFullProcessingPending": {
				"type": "String",
				"defaultValue": "1"
			},
			"MaxNoofCheck": {
				"type": "String",
				"defaultValue": "10"
			},
			"CurrentCountNoofCheck": {
				"type": "String",
				"defaultValue": "1"
			},
			"PreviousCountNoofCheck": {
				"type": "String",
				"defaultValue": "0"
			},
			"checkvalue": {
				"type": "String",
				"defaultValue": "0"
			},
			"checkvalue1": {
				"type": "String",
				"defaultValue": "0"
			}
		},
		"folder": {
			"name": "V2 Pipelines"
		},
		"annotations": []
	}
}